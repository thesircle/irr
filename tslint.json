{ "extends": [
    "tslint-eslint-rules"
  ],
  "defaultSeverity": "error",
  "jsRules": {},
  "rules": {
    "no-var-requires": true,
    "only-arrow-functions": true,
    "curly": [true, "ignore-same-line"],
    "no-conditional-assignment": true,
    "no-console": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-invalid-template-strings": true,
    "no-sparse-arrays": true,
    "no-unused-variable": true,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "switch-default": true,
    "triple-equals": true,
    "typeof-compare": true,
    "use-isnan": true,
    "cyclomatic-complexity": [true, 20],
    "max-classes-per-file": [true, 5],
    "max-file-line-count": [true, 500],
    "max-line-length": [true, 125],
    "no-default-export": true,
    "no-require-imports": true,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "class-name": true,
    "jsdoc-format": true,
    "no-consecutive-blank-lines": [true, 2],
    "sort-imports": [true, { "ignore-case":true }],
    "prefer-template": [true, "allow-single-concat"],
    "variable-name": [true, "ban-keywords", "check-format", "allow-snake-case"],
    "no-extra-semi": true,
    "ter-indent": [
      true, 2,
      {
        "FunctionDeclaration": {
          "parameters": "first",
          "body": 1
        },
        "FunctionExpression": {
          "parameters": "first",
          "body": 1
        },
        "CallExpression": {
          "parameters": "first",
          "body": 1
        },
        "MemberExpression": 1
      }
    ],
    "ter-arrow-spacing": [true, {
      "before": true,
      "after": true
    }],
    "quotemark": [
      true,
      "double",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ]


  },
"rulesDirectory": []
}

